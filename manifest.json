{
  "manifest_version": 2,
  "name": "Vocalun",
  "description": "ニコニコ動画上で見ている動画の曲がアルバムに収録されているかを表示します。",
  "version": "0.13",
  "icons": { "48": "images/icon_48.png", "128": "images/icon_128.png" },
  "content_scripts": [
    {
      "matches": ["http://www.nicovideo.jp/watch/*"],
      "js": ["src/jquery-2.1.1.min.js", "src/show_album_information.js"],
      "css": ["src/album_information.css"]
    }
  ],
  "permissions" : ["tabs", "storage", "http://vocadb.net/api/*"]
}
